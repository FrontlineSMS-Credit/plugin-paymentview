<?xml version="1.0" encoding="UTF-8"?>
<tab name=":paymentView" text="i18n.plugins.paymentview.manager" icon="/icons/big_creditsms.png">
	<tabbedpane selected="1" weightx="1" weighty="1">
    <tab name="tab_clientList" text="Clients">
        <panel columns="1">
            <panel border="true" bottom="5" columns="1" gap="5" left="5" name="pnl_tbl_clientList" right="5" top="5" width="100">
                <table colspan="10" name="tbl_clientList" width="1000">
                    <header>
                        <column text="Name" width="100"/>
                        <column text="Phone" width="100"/>
                        <column text="Account" width="100"/>
                    </header>
                </table>
            </panel>
            <panel columns="3" gap="5" name="pnl_buttons" weightx="1">
                <panel>
                    <button icon="/icons/tick.png" action="customizeClientDB" name="btn_tab_clientList_customizeClientDB" text="Customize Client Database"/>
                </panel>
                <panel colspan="2" columns="2" gap="2" halign="center">
                    <button icon="/icons/cross.png" action="addClient" name="btn_tab_clientList_add" text="Add Client" weightx="1" weighty="1"/>
                    <button icon="/icons/cross.png" action="importClient" name="btn_tab_clientList_import" text="Import Client"/>
                </panel>
                <panel halign="right">
                    <button action="addClient" icon="/icons/cross.png" name="btn_tab_clientList_export" text="Export"/>
                </panel>
            </panel>
        </panel>
    </tab>
    <tab name="tab_incomingPayments" text="Incoming Payments">
        <panel columns="1">
            <panel border="true" bottom="5" columns="2" gap="5" left="5" name="pnl_tbl_tab_incomingPayments_clients" right="5" top="5">
                <table name="tbl_tab_incomingPayments_clients">
                    <header>
                        <column text="Name" width="52"/>
                        <column text="Phone"/>
                        <column text="Account"/>
                        <column text="Amount"/>
                        <column text="Date"/>
                        <column text="Time"/>
                    </header>
                </table>
            </panel>
            <panel gap="5" name="pnl_tab_incomingPayments_buttons" weightx="1">
                <combobox name="cmb_tab_incomingPayments_mobilePaymentAccount" text="Select Mobile payment account"/>
                <button icon="/icons/tick.png" name="btn_tab_incomingPayments_analyse" text="Analyse"/>
                <button icon="/icons/cross.png" name="btn_tab_incomingPayments_export" text="Export"/>
            </panel>
        </panel>
    </tab>
    <tab name="tab_outgoingPayments" text="Outgoing Payments">
        <tabbedpane name="tabP_tab_outgoingPayments_tabs" placement="left">
            <tab name="tabP_tab_outgoingPayments_sentPayments" text="Sent Payments">
                <panel columns="1" gap="5">
                    <panel border="true" bottom="5" columns="2" gap="5" left="5" name="pnl_tbl_tab_outgoingPayments_sentPayments_clients" right="5" top="5">
                        <table name="tbl_tab_outgoingPayments_sentPayments_clients">
                            <header>
                                <column text="Name"/>
                                <column text="Phone Number"/>
                                <column text="Amount"/>
                                <column text="Date"/>
                                <column text="Time"/>
                                <column text="Payment ID"/>
                                <column text="Notes"/>
                            </header>
                        </table>
                    </panel>
                    <panel gap="5" weightx="1">
                        <combobox name="cmb_tab_outgoingPayments_sentPayments_mobilePaymentAccount" text="Select mobile payment account"/>
                        <button icon="/icons/cross.png" name="btn_tab_outgoingPayments_sentPayments_export" text="Export"/>
                    </panel>
                </panel>
            </tab>
            <tab name="tab_tab_outgoingPayments_sendNewPayments" text="Send New Payments">
                <panel columns="1">
                    <panel border="true" bottom="5" columns="1" gap="5" left="5" right="5" top="5">
                        <panel bottom="5" gap="5">
                            <label font="18" text="Send Outgoing Payment"/>
                        </panel>
                        <panel columns="2" gap="5" name="frm_tab_tab_outgoingPayments_sendNewPayments_customerDetails">
                            <label name="lbl_tab_tab_outgoingPayments_sendNewPayments_Name" text="Name:"/>
                            <textfield name="txt_tab_tab_outgoingPayments_sendNewPayments_name"/>
                            <label name="lbl_tab_tab_outgoingPayments_sendNewPayments_Phone" text="Phone Number:"/>
                            <textfield name="txt_tab_tab_outgoingPayments_sendNewPayments_phone"/>
                            <label name="lbl_tab_tab_outgoingPayments_sendNewPayments_Name" text="Verify Phone Number:"/>
                            <textfield name="txt_tab_tab_outgoingPayments_sendNewPayments_verifyPhoneNumber"/>
                            <label name="lbl_tab_tab_outgoingPayments_sendNewPayments_amount" text="Amount:"/>
                            <textfield name="txt_tab_tab_outgoingPayments_sendNewPayments_amount"/>
                            <label name="lbl_tab_tab_outgoingPayments_sendNewPayments_mobilePaymentSystem" text="Mobile Payment System:"/>
                            <combobox name="cmb_tab_tab_outgoingPayments_sendNewPayments_mobilePaymentSystem"/>
                            <label name="lbl_tab_tab_outgoingPayments_sendNewPayments_paymentID" text="Payment ID:"/>
                            <textfield name="txt_tab_tab_outgoingPayments_sendNewPayments_paymentID"/>
                            <label name="lbl_tab_tab_outgoingPayments_sendNewPayments_notes" text="Notes:"/>
                            <textarea colspan="2" columns="2" name="txt_tab_tab_outgoingPayments_sendNewPayments_notes" rowspan="5"/>
                        </panel>
                    </panel>
                    <panel gap="5" weightx="1">
                        <button icon="/icons/tick.png" name="btn_tab_tab_outgoingPayments_sendNewPayments_sendPaymentNow" text="Send Payment Now"/>
                        <button icon="/icons/cross.png" name="btn_tab_tab_outgoingPayments_sendNewPayments_schedulePayment" text="Schedule Payment"/>
                    </panel>
                </panel>
            </tab>
            <tab name="tab_tab_outgoingPayments_importNewPayments" text="Import New Payments">
                <panel columns="1" gap="5">
                    <panel border="true" bottom="5" columns="1" gap="5" left="5" right="5" top="5">
                        <panel columns="1">
                            <label font="18" text="Import New Payments to Send"/>
                            <panel columns="3" gap="5">
                                <combobox colspan="2" name="browse_tab_tab_outgoingPayments_importNewPayments_file"/>
                                <button name="btn_tab_tab_outgoingPayments_importNewPayments_import" text="Import"/>
                            </panel>
                        </panel>
                        <panel columns="1">
                            <panel>
                                <label colspan="2" text="Preview Payment to send"/>
                            </panel>
                            <table name="tbl_tab_tab_outgoingPayments_importNewPayments_clients">
                                <header>
                                    <column text="Name"/>
                                    <column text="Phone Number"/>
                                    <column text="Amount"/>
                                    <column text="Date"/>
                                    <column text="Time"/>
                                    <column text="Payment ID"/>
                                    <column text="Notes"/>
                                </header>
                            </table>
                        </panel>
                    </panel>
                    <panel gap="5" halign="right" weightx="1">
                        <button icon="/icons/cross.png" name="btn_tab_tab_outgoingPayments_importNewPayments_sendPaymentNow" text="Send Payment Now"/>
                        <button name="btn_tab_tab_outgoingPayments_importNewPayments_schedulePayment" text="Schedule Payment"/>
                    </panel>
                </panel>
            </tab>
            <tab name="tab_tab_outgoingPayments_selectFromClients" text="Select From Client List">
                <panel columns="1" gap="5" weighty="1" width="1">
                    <panel border="true" bottom="5" columns="1" gap="5" left="5" right="5" top="5">
                        <panel columns="1">
                            <panel>
                                <label colspan="2" name="lbl_tab_outgoingPayments_selectFromClients_banner" text="Select a client to initiate a payment"/>
                            </panel>
                            <table name="tbl_tab_outgoingPayments_selectFromClients_clients">
                                <header>
                                    <column text="Select"/>
                                    <column text="Name"/>
                                    <column text="Phone Number"/>
                                    <column text="Amount"/>
                                    <column text="Date"/>
                                    <column text="Time"/>
                                    <column text="Payment ID"/>
                                    <column text="Notes"/>
                                </header>
                            </table>
                        </panel>
                    </panel>
                    <panel columns="1" gap="5" halign="right" weightx="1">
                        <button icon="/icons/cross.png" name="btn_tab_outgoingPayments_selectFromClients_sendPaymentToSelection" text="Send Payment to Selected Clients"/>
                        <button name="btn_tab_outgoingPayments_selectFromClients_schedulePaymentToSelection" text="Schedule Payment to Selected Clients"/>
                    </panel>
                </panel>
            </tab>
        </tabbedpane>
    </tab>
    <tab name="tab_exceptions" text="Exceptions"/>
    <tab name="tab_export" text="Export">
        <tabbedpane name="tab_export" placement="left" selected="1">
            <tab name="tab_tab_export_clients" text="Clients">
                <panel columns="1">
                    <panel bottom="5" columns="1" gap="3">
                        <label font="18" name="lbl_tab_export_banner" text="Export By Client Characteristic"/>
                        <label name="lbl_tab_export_hint" text="Sort by a characteristic to identify the client(s) or group you would like to export"/>
                    </panel>
                    <panel columns="3" gap="5" weightx="1">
                        <table colspan="3" name="tbl_tab_tab_export_clients_clientsList">
                            <header>
                                <column text="Name"/>
                                <column text="Phone Number"/>
                                <column text="Amount"/>
                                <column text="Date"/>
                                <column text="Time"/>
                                <column text="Payment ID"/>
                                <column text="Notes"/>
                            </header>
                        </table>
                        <button name="btn_tab_tab_export_clients_selectAll" text="Select All"/>
                        <separator width="1"/>
                        <button name="btn_tab_tab_export_clients_exportSelectedClients" text="Export Selected Clients"/>
                        <panel colspan="3" columns="1" gap="4">
                            <separator colspan="3"/>
                            <panel colspan="3" columns="3" gap="5">
                                <label name="lbl_tab_tab_export_clients_exportAllRecordsFromGroup" text="Export all records from:"/>
                                <combobox name="cmb_tab_export_exportAllRecordsFromGroup"/>
                                <button name="btn_tab_tab_export_clients_exportAllRecordsFromGroup" text="Export selected client group"/>
                            </panel>
                        </panel>
                    </panel>
                </panel>
            </tab>
            <tab name="tab_tab_export_payments" text="Payments">
                <panel columns="1">
                    <panel columns="1">
                        <label font="18" name="btn_tab_tab_export_payments_banner" text="Export By Client Characteristic"/>
                    </panel>
                    <panel columns="1">
                        <label font="14 italic" name="lbl_tab_tab_export_payments_typeOfPayment" text="Choose the kind of payment to export:"/>
                        <checkbox group="typeOfPayment" name="grp_tab_export_payments_incomingPayments" text="Incoming Payments (from clients)"/>
                        <checkbox group="typeOfPayment" name="grp_tab_export_payments_outgoingPayments" selected="true" text="Outgoing Payments (to clients)"/>
                    </panel>
                    <panel columns="1">
                        <label text="Choose the date range for export:"/>
                        <checkbox selected="true" text="Date Range:"/>
                        <panel>
                            <panel>
                                <label name="lbl_tab_export_payments_fromDate" text="From:"/>
                                <textfield name="txt_tab_export_payments_fromDate"/>
                            </panel>
                            <panel>
                                <label name="lbl_tab_export_payments_toDate" text="To:"/>
                                <textfield name="txt_tab_export_payments_toDate"/>
                            </panel>
                        </panel>
                        <checkbox selected="true" text="Export by selection"/>
                    </panel>
                    <panel columns="1" gap="5" weightx="1">
                        <table name="tbl_tab_tab_export_payments_clients">
                            <header>
                                <column text="Select"/>
                                <column text="Name"/>
                                <column text="Phone Number"/>
                                <column text="Amount"/>
                                <column text="Date"/>
                                <column text="Time"/>
                                <column text="Payment ID"/>
                                <column text="Notes"/>
                            </header>
                        </table>
                        <panel columns="1">
                            <separator/>
                            <panel columns="3" gap="5" halign="right">
                                <button halign="right" name="btn_tab_tab_export_payments_export_export" text="Export Payments"/>
                            </panel>
                        </panel>
                    </panel>
                </panel>
            </tab>
            <tab name="tab_tab_export_clientHistory" text="Client History">
                <panel columns="1">
                    <panel columns="1">
                        <label font="18" name="lbl_tab_tab_export_clientHistory_banner" text="Export All Records for a client"/>
                        <panel columns="1">
                            <label font="14 italic" text="Identify Client:"/>
                            <panel columns="1" gap="5">
                                <panel gap="5">
                                    <checkbox group="identity" name="chk_tab_tab_export_clientHistory_phoneNumber" text="Phone Number:"/>
                                    <textfield name="txt_tab_tab_export_clientHistory_phoneNumber"/>
                                </panel>
                                <panel colspan="2" columns="2" gap="5">
                                    <checkbox group="identity" name="chk_tab_tab_export_clientHistory_accountNumber" text="Account Number:"/>
                                    <textfield name="txt_tab_tab_export_clientHistory_accountNumber"/>
                                    <checkbox colspan="2" halign="center" selected="true" text="Include payments credited to this account from other accounts"/>
                                </panel>
                            </panel>
                            <panel columns="1" gap="5">
                                <label text="Select types of payments too include:"/>
                                <checkbox group="paymentType" name="chk_tab_tab_export_clientHistory_incomingPayments" text="Incoming Payments (from clients)"/>
                                <checkbox group="paymentType" name="chk_tab_tab_export_clientHistory_outgoingPayments" selected="true" text="Outgoing Payments (to clients)"/>
                            </panel>
                            <panel columns="1" gap="5">
                                <label text="Select the file format you wish to export to:"/>
                                <checkbox group="fileType" name="chk_tab_tab_export_clientHistory_PDF" text="PDF"/>
                                <checkbox group="fileType" name="chk_tab_tab_export_clientHistory_CSV" selected="true" text="CSV"/>
                            </panel>
                        </panel>
                    </panel>
                </panel>
            </tab>
        </tabbedpane>
    </tab>
</tabbedpane>
</tab>