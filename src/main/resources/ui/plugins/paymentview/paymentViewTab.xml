<?xml version="1.0" encoding="UTF-8"?>
<tab name=":paymentView" text="i18n.paymentview.manager">
	<splitpane divider="430" rowspan="2" weightx="1" weighty="1">				
		<panel gap="9" top="9" left="9" bottom="9" right="9" columns="2" weightx="1" weighty="1">
			<label icon="/icons/header/paymentView.png" weighty="1" valign="top"/>
			<panel name="pnClients" text="Clients" icon="/icons/user.png" rowspan="2" columns="1" gap="5" top="5" left="5" bottom="5" right="5" weightx="1" weighty="1" border="true">
				<panel name="pnSearchClients" weightx="1" gap="5">
				    <label icon="/icons/search.png" text="i18n.common.search"/>
				    <textfield name="fldLiveSearch" weightx="1" action="liveClientSearch(fldLiveSearch)"/>
				</panel>
				<list name="lsClients" weightx="1" weighty="1" action="selectClient(lsClients)" perform="showClientDetails(lsClients)">
				</list>
				<panel name="buttonsPanel" gap="5" weightx="1">
					<button name="btNewClient" text="i18n.action.add" action="showNewClientForm"/>
					<button name="btEditClient" text="i18n.action.edit" enabled="false" />
					<button name="btDeleteClient" text="i18n.action.delete" enabled="false"/>
				</panel>
			</panel>
			<button tooltip="i18n.tooltip.click.for.help" valign="bottom" icon="/icons/big_help.png" type="link"/>
		</panel>
		<panel columns="1" gap="9" top="9" right="9" bottom="9" left="9" weightx="1" weighty="1">
			<panel columns="1" gap="5" top="5" right="5" bottom="5" left="5" weightx="1" weighty="1" border="true">
				<tabbedpane weightx="1" weighty="1">
					<tab name="tbDispersals" text="i18n.paymentview.tab.deposits">
						<panel gap="5" top="5" right="5" bottom="5" left="5">
							<table name="tblDispersals" weightx="1" weighty="1">
								<header>
									<column text="i18n.common.sender" width="350"/>
									<column text="i18n.paymentview.transaction.paymentsystem" width="150"/>
									<column text="i18n.paymentview.transaction.amount" width="100"/>
									<column text="i18n.paymentview.transaction.date" />
								</header>
							</table>
						</panel>
					</tab>
					<tab name="tbRepayments" text="i18n.paymentview.tab.withdrawals">
						<panel gap="5" top="5" right="5" bottom="5" left="5">
							<table name="tblWithdrawals" weightx="1" weighty="1">
								<header>
									<column text="i18n.common.recipient" width="350" />
									<column text="i18n.paymentview.transaction.paymentsystem" width="150" />
									<column text="i18n.paymentview.transaction.amount" width="100" />
									<column text="i18n.paymentview.transaction.date" />
								</header>
							</table>
						</panel>
					</tab>
					<tab name="tbSettings" text="i18n.paymentview.tab.settings">
						<splitpane divider="200" weightx="1" weighty="1">
							<panel gap="5" top="5" left="5" bottom="5" right="5" weightx="1" weighty="1">
								<tree angle="true" line="false" weightx="1" weighty="1">
									<node text="Payment Systems" />
									<node text="Message Filtering" />
									<node text="Network Operators" />
									<node text="Quick Dial Codes" />
									<node text="Countries" />
									<node text="MIS Integration" />
								</tree>
							</panel>
							<panel gap="5" top="5" left="5" bottom="5" right="5" weightx="1" weighty="1">
								<panel name="pnSettingsRightPane" weightx="1" weighty="1" border="true" />
							</panel>
						</splitpane>
					</tab>
				</tabbedpane>
			</panel>
		</panel>	
	</splitpane>
</tab>