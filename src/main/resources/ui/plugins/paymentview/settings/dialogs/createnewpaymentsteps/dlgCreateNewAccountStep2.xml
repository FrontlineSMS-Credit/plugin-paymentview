<?xml version="1.0" encoding="ISO-8859-1"?>
<dialog bottom="9"
	columns="3" gap="15" left="9" name="clientDetailsDialog"
	right="9" text="Create Alert"
	top="9" resizable="true" modal="true">

	<label text="Enter Account PIN" />
	<passwordfield colspan="2" columns="15" name="pin"  text="" action="assertMaxLength(this)"/>
	
	<label text="Verify Account PIN"/>
	<passwordfield colspan="2" columns="15" name="vpin" text="" action="assertMaxLength(this)" perform="next(pin.text, vpin.text)"/>

	<panel colspan="3" weightx="1">
		<button icon="/icons/left.png" text="Previous" action="previous" />
		<panel weightx="1" />
		<button icon="/icons/right.png" text="Next"	action="next(pin.text,vpin.text)" />
	</panel>
</dialog>