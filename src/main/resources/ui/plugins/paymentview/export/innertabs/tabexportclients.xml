<?xml version="1.0" encoding="UTF-8"?>
<tab name="tab_clients" text="Clients">
	<panel columns="1" gap="10" weightx="1" weighty="1">
		<panel bottom="5" columns="1" gap="5" weightx="1">
			<label font="20 bold" name="lbl_banner" text="Export By Client Characteristic" />
			<label name="lbl_hint"
				text="Sort by a characteristic to identify the client(s) or group you would like to export" />
		</panel>
		<panel columns="1" gap="5" gap="5" weightx="1" weighty="1">
			<table name="tbl_clientsList" weightx="1" weighty="1">
				<header>
					<column width="200" icon="/icons/user.png" text="Name" />
					<column width="150" icon="/icons/phone.png" text="Phone Number" />
					<column width="120" icon="/icons/money.png" text="Amount" />
					<column width="120" icon="/icons/date.png" text="Date" />
					<column width="120" icon="/icons/time.png" text="Time" />
					<column width="150" icon="/icons/key.png" text="Payment ID." />
					<column icon="/icons/description.png" text="Notes" />
				</header>
			</table>
			<panel weightx="1" left="5" right="5" bottom="5">
				<button name="btn_selectAll" text="Select All" />
				<panel weightx="1" />
				<button icon="/icons/export.png" name="btn_exportSelectedClients" text="Export Selected Clients" />
			</panel>
			<panel columns="1" gap="4" weightx="1" left="5" right="5">
				<separator />
				<panel gap="5" bottom="5" weightx="1">
					<label name="lbl_exportAllRecordsFromGroup" text="Export all records from:" />
					<combobox name="cmb_exportAllRecordsFromGroup" />
					<button icon="/icons/export.png" name="btn_exportAllRecordsFromGroup" text="Export selected client group" />
				</panel>
			</panel>
		</panel>
	</panel>
</tab>