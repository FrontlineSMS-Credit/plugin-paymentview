	                </popupmenu>
	                 -->
				</table>
			</panel>
			<panel weightx="1">
				<button name="btn_selectAll" action="selectAll(tbl_clients)" text="Select All" />
				<panel weightx="1" />
				<button icon="/icons/export.png" action="exportSelectedClients" name="btn_exportSelectedClients" text="Export Selected Clients" />
			</panel>
			<panel columns="1" weightx="1" gap="5">
				<separator />
				<panel  weightx="1" gap="5">
					<label name="lbl_exportAllRecordsFromGroup" text="Export all records from:" />
					<combobox name="cmb_exportAllRecordsFromGroup" weightx="1"/>
					<panel weightx="1"/>
					<panel weightx="1"/>
					<button icon="/icons/export.png" name="btn_exportAllRecordsFromGroup" text="Export selected client group" />
				</panel>
			</panel>
		</panel>
	</panel>
