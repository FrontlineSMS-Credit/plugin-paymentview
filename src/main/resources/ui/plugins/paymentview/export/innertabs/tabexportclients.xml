<?xml version="1.0" encoding="UTF-8"?>
<tab name="tab_clients" text="Clients">
	<panel columns="1" gap="10" weightx="1" weighty="1" bottom="5" left="5" right="5">
		<panel bottom="5" columns="1" gap="5" weightx="1">
			<label font="20 bold" name="lbl_banner" text="Export By Client Characteristic" />
			<label name="lbl_hint"
				text="Sort by a characteristic to identify the client(s) or group you would like to export" />
		</panel>
		<panel columns="1" gap="5" weightx="1" weighty="1">
			<table name="tbl_clientsList" weightx="1" weighty="1"  selection="multiple">
				<header>
					<column width="200" icon="/icons/user.png" sort="descent" text="Name" />
					<column width="150" icon="/icons/phone.png" sort="none" text="Phone Number" />
					<column width="120" icon="/icons/money.png" sort="none" text="Amount" />
					<column width="120" icon="/icons/date.png" sort="none" text="Date" />
					<column width="120" icon="/icons/time.png" sort="none" text="Time" />
					<column width="150" icon="/icons/key.png" sort="none" text="Payment ID." />
					<column icon="/icons/description.png" text="Notes" />
				</header>
				<!--
				<popupmenu menushown="populateGroups(this, contactManager_contactList)" name="menu">
                    <menuitem action="sendSmsToContacts" icon="/icons/sms_send.png" name="miSendSMS" text="i18n.action.send.sms"/>
                    <menuitem action="showMessageHistory(contactManager_contactList)" icon="/icons/history.png" name="msg_history" text="i18n.action.message.history"/>
                    <menuitem action="showExportWizard(contactManager_contactList)" icon="/icons/export.png" name="miExportSelected" text="i18n.action.export.selected"/>
                    <separator name="sp2"/>
                    <menuitem action="showContactDetails(contactManager_contactList)" icon="/icons/user_edit.png" name="viewContact" text="i18n.action.view.edit.contact" tooltip="i18n.tooltip.view.contact.details"/>
                    <menuitem action="showConfirmationDialog('deleteSelectedContacts')" icon="/icons/user_delete.png" name="miDelete" text="i18n.action.delete.selected.contacts"/>
                </popupmenu>
                 -->
			</table>
			<panel weightx="1">
				<button name="btn_selectAll" text="Select All" />
				<panel weightx="1" />
				<button icon="/icons/export.png" action="exportSelectedClients" name="btn_exportSelectedClients" text="Export Selected Clients" />
			</panel>
			<panel columns="1" weightx="1" gap="5">
				<separator />
				<panel  weightx="1" gap="5">
					<label name="lbl_exportAllRecordsFromGroup" text="Export all records from:" />
					<combobox name="cmb_exportAllRecordsFromGroup" weightx="1"/>
					<panel weightx="1"/>
					<panel weightx="1"/>
					<button icon="/icons/export.png" name="btn_exportAllRecordsFromGroup" text="Export selected client group" />
				</panel>
			</panel>
		</panel>
	</panel>
</tab>