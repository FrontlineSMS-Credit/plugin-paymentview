<?xml version="1.0" encoding="UTF-8"?>
<tab name="tab_clients" text="Clients">
	<panel columns="1" gap="10" weightx="1" weighty="1" bottom="5" left="5" right="5">
		<panel bottom="5" columns="1" gap="5" weightx="1">
			<label font="20 bold" name="lbl_banner" text="Export By Client Characteristic" />
			<label name="lbl_hint"
				text="Sort by a characteristic to identify the client(s) or group you would like to export" />
		</panel>
		<panel columns="1" gap="5" weightx="1" weighty="1">
			<panel name="pnlClientsTableHolder" columns="1" gap="5" weightx="1" weighty="1"/>			
			<panel weightx="1">
				<button name="btn_selectAll" action="selectAll" text="Select All" />
				<panel weightx="1" />
				<button icon="/icons/export.png" action="exportSelectedClients" name="btn_exportSelectedClients" text="Export Selected Clients" />
			</panel>
			<panel columns="1" weightx="1" gap="5">
				<separator />
				<panel  weightx="1" gap="5">
					<label name="lbl_exportAllRecordsFromGroup" text="Export all records from:" />
					<combobox name="cmb_exportAllRecordsFromGroup" weightx="1"/>
					<panel weightx="1"/>
					<panel weightx="1"/>
					<button icon="/icons/export.png" name="btn_exportAllRecordsFromGroup" text="Export selected client group" />
				</panel>
			</panel>
		</panel>
	</panel>
</tab>