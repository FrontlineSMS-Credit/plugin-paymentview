<?xml version="1.0" encoding="ISO-8859-1"?>
<dialog bottom="9" close="removeDialog(this)" columns="1" gap="15"
	left="9" modal="true" name="exportByCharacteristic1" resizable="true"
	right="9" text="Export By Client Characteristic" top="9">

	<panel columns="2" weightx="1">
		<label colspan="2" text="Choose the kind of payment to export:" />
		<panel weightx="1" />
		<checkbox text="Incoming Payments (from clients)" />
		<panel weightx="1" />
		<checkbox text="Outgoing Payments (to clients)" />
	</panel>
	<panel columns="2">
		<label text="Choose the date range for export:" />
		<panel weightx="1" />
		<checkbox text="Today" />
		<panel weightx="1" />
		<checkbox halign="left" text="Past Week" />
		<panel weightx="1" />
		<checkbox text="All" />
		<panel weightx="1" />
		<checkbox text="Date Range:" />
		<panel weightx="1" />
		<panel weightx="1">
			<textfield columns="10" name="txt_FromDate" />
			<button action="showDateSelecter(txt_FromDate)" icon="/icons/date.png" />
			<textfield columns="10" name="txt_FromDate" />
			<button action="showDateSelecter(txt_FromDate)" icon="/icons/date.png" />
		</panel>
	</panel>
	<panel columns="1" rows="2">
		<label text="Select the file format you wish to export to:"
			rowspan="2" />
		<checkbox text="CSV" />
		<checkbox text="PDF" />
	</panel>
	<panel gap="5" halign="right" weightx="1">
		<button action="removeDialog" icon="/icons/cross.png" text="Cancel" />
		<button text="Next" icon="/icons/right.png" />
	</panel>
</dialog>