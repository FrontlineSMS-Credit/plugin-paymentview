<?xml version="1.0" encoding="UTF-8"?>
<tab name="tab_logs" text="Logs" icon="/icons/keyword.png">
	<panel weightx="1" weighty="1" top="5" bottom="5" right="5" left="5"
		columns="1" gap="5">
		<label text="PaymentView Logs" font="20 Bold" weightx="1"/>
		<panel columns="1" name="pnl_logs" weightx="1"
			weighty="1" gap="5">
			<table name="tbl_logs" weightx="1" weighty="1" perform="viewLog()">
				<header>					
					<column text="i18n.plugins.paymentview.common.logs.level" width="100"/>
					<column text="i18n.plugins.paymentview.common.logs.description" width="400"/>
					<column text="i18n.plugins.paymentview.common.logs.message" width="600"/>
					<column text="i18n.plugins.paymentview.common.logs.time" width="200"/>
				</header>
				<popupmenu name="menu">
				</popupmenu>
			</table>
		</panel>
		<panel gap="5" weightx="1">
			<panel weightx="1"/>
			<panel>
				<button action="export" halign="right" icon="/icons/export.png" text="Export" />
			</panel>
		</panel>
	</panel>
</tab>