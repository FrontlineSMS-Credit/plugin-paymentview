<?xml version="1.0" encoding="ISO-8859-1"?>
<dialog bottom="9" close="removeDialog(this)" columns="1" gap="15"
	left="9" icon="/icons/user.png" name="clientDetailsDialog" right="9"
	text="i18n.plugins.paymentview.dialog.client" top="9" resizable="true"
	modal="true" closable="true">

	<panel weightx="1" weighty="1" name="parentPnlFields" columns="1" gap="15">
		<panel name="pnlFields" weightx="1" weighty="1" columns="3" gap="15"/>
		<panel name="pnlCustomFields" weightx="1" weighty="1" columns="1" border="true"
		text="Custom Fields" left="4" right="4" bottom="4" gap="5">
			<list name="lstCustomFields" weightx="1" weighty="1"/>
			<panel weightx="1" weighty="1" columns="3" halign="center" gap="5">
				<button icon="/icons/helper_add.png"  name="btAddField" action="showOtherFieldDialog" text="Add Field" />
				<button icon="/icons/delete.png" name="btnRemoveField" action="removeField(lstCustomFields)" text="Remove Field" />
			</panel>
		</panel>
	</panel>
	<panel weightx="1" gap="5">
		<panel weightx="1"/>
		<button icon="/icons/tick.png" action="removeDialog" name="okButton" text="OK" />
		<button icon="/icons/cross.png" action="removeDialog" name="btClose" text="Close" />
	</panel>
</dialog>