<?xml version="1.0" encoding="UTF-8"?>
<tab name="tab_sentPayments" text="i18n.plugins.paymentview.tab.outgoingpayments.sentpayments.text">
	<panel columns="1" weightx="1" weighty="1" gap="10">		
		<panel gap="5" columns="1" left="5" right="5" top="5" weightx="1"
			weighty="1" name="pnl_clients">
			<label text="i18n.plugins.paymentview.tab.outgoingpayments.sentpayments.text" font="20 Bold" weightx="1"/>
			<table name="tbl_clients" weightx="1" weighty="1">
				<header>
					<column width="150" icon="/icons/key.png" text="i18n.plugins.paymentview.common.paymentid" />
					<column width="200" icon="/icons/user.png" text="i18n.plugins.paymentview.common.name" />
					<column width="150" icon="/icons/phone.png" text="i18n.plugins.paymentview.common.phonenumber" />
					<column width="120" icon="/icons/money.png" text="i18n.plugins.paymentview.common.amount" />
					<column width="120" icon="/icons/date.png" text="i18n.common.date" />
					<column width="120" icon="/icons/time.png" text="i18n.common.time" />
					<column width="120" icon="/icons/money.png" text="i18n.plugins.paymentview.common.status" />				
					<column icon="/icons/description.png" text="i18n.common.notes" />
				</header>
			</table>
		</panel>		
		<panel gap="5" left="5" bottom="5" weightx="1">			
			<combobox width="300" colspan="2" name="cmb_mobilePaymentAccount" 
			text="i18n.plugins.paymentview.combobox.selectmobilepaymentaccount" weightx="1">
				<choice text="Display All"/>
				<choice text="Safaricom Mpesa"/>
				<choice text="Aitel Zap"/>
				<choice text="Orange Money"/>
				<choice text="Yu Cash"/>
			</combobox>			
			<panel weightx="1"/>
			<panel weightx="1"/>
			<button colspan="1" icon="/icons/export.png" action="exportPayments" name="btn_export" text="i18n.action.export" />
		</panel>
	</panel>
</tab>