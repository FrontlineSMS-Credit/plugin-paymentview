<?xml version="1.0" encoding="UTF-8"?>
<tab name="tab_sentPayments" text="Sent Payments">
	<panel columns="1" weightx="1" weighty="1" gap="10">
		<panel gap="5" left="5" right="5" top="5" weightx="1"
			weighty="1">
			<table name="tbl_clients" weightx="1" weighty="1">
				<header>
					<column width="200" icon="/icons/user.png" text="Name" />
					<column width="150" icon="/icons/phone.png" text="Phone Number" />
					<column width="120" icon="/icons/money.png" text="Amount" />
					<column width="120" icon="/icons/date.png" text="Date" />
					<column width="120" icon="/icons/time.png" text="Time" />
					<column width="150" icon="/icons/key.png" text="Payment ID." />
					<column icon="/icons/description.png" text="Notes" />
				</header>
			</table>
		</panel>		
		<panel gap="5" left="5" bottom="5" weightx="1">			
			<combobox width="300" colspan="2" name="cmb_mobilePaymentAccount" text="Select mobile payment account" weightx="1">
				<choice text="Display All"/>
				<choice text="Safaricom Mpesa"/>
				<choice text="Aitel Zap"/>
				<choice text="Orange Money"/>
				<choice text="Yu Cash"/>
			</combobox>			
			<panel weightx="1"/>
			<panel weightx="1"/>
			<button colspan="1" icon="/icons/export.png" action="exportPayments" name="btn_export" text="Export" />
		</panel>
	</panel>
</tab>