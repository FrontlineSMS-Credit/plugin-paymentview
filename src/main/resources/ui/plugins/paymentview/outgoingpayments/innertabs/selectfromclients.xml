<?xml version="1.0" encoding="UTF-8"?>
<tab name="tab_selectFromClients" text="i18n.plugins.paymentview.tab.outgoingpayments.selectfromclients.text">
	<panel columns="1" gap="10" weightx="1" weighty="1">
		<panel columns="1" gap="5" left="5" right="5" top="5" weightx="1"
			weighty="1" name="pnl_clients">
			<panel weightx="1">
				<label font="20 bold"
					name="lbl_banner" text="i18n.plugins.paymentview.tab.outgoingpayments.selectfromclients.title" />
			</panel>
			<table name="tbl_clients"  selection="single" weightx="1" weighty="1" action="selectUsers(this)">
				<header>
					<column text="Select"/>
					<column text="i18n.plugins.paymentview.common.name" width="200" icon="/icons/user.png" />
					<column text="i18n.plugins.paymentview.common.phonenumber" width="150" icon="/icons/phone.png" />
					<column text="i18n.plugins.paymentview.common.account" width="100" />
				</header>
			</table>
		</panel>
		<panel gap="5" left="5" right="5" bottom="5" halign="right"
			weightx="1">
			<button icon="/icons/recipient_number.png" action="showSendPaymentAuthDialog"
				name="btn_sendPaymentToSelection" text="i18n.plugins.paymentview.action.sendpaymentnow" />
			<button icon="/icons/time.png" name="btn_schedulePaymentToSelection"
				action="showSchedulePaymentAuthDialog" text="i18n.plugins.paymentview.action.schedulepayment" />
		</panel>
	</panel>
</tab>