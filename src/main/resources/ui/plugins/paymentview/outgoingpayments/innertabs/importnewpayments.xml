<?xml version="1.0" encoding="UTF-8"?>
<tab name="tab_importNewPayments" text="Import New Payments">
	<panel columns="1" gap="10" weightx="1" weighty="1">
		<panel bottom="5" columns="1" gap="5" left="5" right="5" top="5"
			weightx="1" weighty="1">
			<panel columns="1">
				<label font="20 bold" text="Import New Payments to Send"
					weightx="1" weighty="1" />
				<panel columns="3" gap="5">
					<panel colspan="2">
						<textfield columns="10" name="txt_StartDate" />
						<button action="showImportWizard('messages')" icon="/icons/browse.png" />
					</panel>
					<button name="btn_import" text="Import" icon="/icons/import.png"/>
				</panel>
			</panel>
			<panel columns="1" weightx="1" weighty="1">
				<panel>
					<label colspan="2" text="Preview Payment to send" />
				</panel>
				<table name="tbl_clients" weightx="1" weighty="1">
					<header>
						<column width="200" icon="/icons/user.png" text="Name" />
						<column width="150" icon="/icons/phone.png" text="Phone Number" />
						<column width="120" icon="/icons/money.png" text="Amount" />
						<column width="120" icon="/icons/date.png" text="Date" />
						<column width="120" icon="/icons/time.png" text="Time" />
						<column width="150" icon="/icons/key.png" text="Payment ID." />
						<column icon="/icons/description.png" text="Notes" />
					</header>
				</table>
			</panel>
		</panel>
		<panel halign="right" gap="5" left="5" right="5" bottom="5"
			weightx="1">
			<button icon="/icons/recipient_number.png" name="btn_sendPaymentNow" text="Send Payment Now" />
			<button icon="/icons/time.png" name="btn_schedulePayment" text="Schedule Payment" />
		</panel>
	</panel>
</tab>