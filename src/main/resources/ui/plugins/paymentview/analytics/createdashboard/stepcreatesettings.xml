<?xml version="1.0" encoding="ISO-8859-1"?>
<panel name="pnlStepCreateSettings" columns="1" weightx="1"
	weighty="1">
	<panel bottom="5" columns="1" gap="10" left="5" right="5" top="10"
		weightx="1" weighty="1">
		<label font="20 Bold" text="View Client Progress" weightx="1" />
		<panel weightx="1" bottom="5" gap="5" left="5" right="5" top="5">
			<button type="link" text="Select service" />
			<label text=" &gt; " />
			<button type="link" text="Targeted Savings" />
			<label text=" &gt; " />
			<button type="link" text="Select Client" />
			<label text=" &gt; " />
			<label text="Creating Settings" />
		</panel>
		<label text="3. Create the settings for this client or group of clients" />
		<panel columns="4" bottom="5" columns="1" gap="5" left="10"
			right="10" top="10" weightx="1">
			<label colspan="1" text="What is the Savings target / goal" />
			<textfield colspan="3" />
			<label colspan="1" text="What is the start date?" />
			<panel colspan="3">
				<textfield columns="10" name="txt_StartDate" />
				<button action="showDateSelecter(txt_StartDate)" icon="/icons/date.png" />
			</panel>
			<label colspan="1" text="What is the end date?" />
			<panel colspan="3">
				<textfield columns="10" name="txt_EndDate" />
				<button action="showDateSelecter(txt_EndDate)" icon="/icons/date.png" />
			</panel>
		</panel>
	</panel>
	<panel gap="5" halign="right" weightx="1">
		<button icon="/icons/tick.png" name="btnPrevious" text="Previous" />
		<button icon="/icons/cross.png" name="btnNext" text="Next" />
	</panel>
</panel>
