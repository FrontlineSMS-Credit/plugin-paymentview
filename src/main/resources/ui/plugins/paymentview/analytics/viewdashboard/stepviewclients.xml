<?xml version="1.0" encoding="ISO-8859-1"?>
<panel name="pnlViewClients" bottom="5" columns="1" gap="10"
	left="5" right="5" top="10" weightx="1" weighty="1">

	<panel columns="1" gap="5" weightx="1" weighty="1">
		<label font="20 Bold" text="View Client progress" />
		<table name="tbl_clients" weightx="1" weighty="1">
			<header>
				<column text="Name" width="150" icon="/icons/user.png" />
				<column text="Start date" width="100" icon="/icons/date.png" />
				<column text="End date" width="100" icon="/icons/date.png" />
				<column text="Savings target" width="120" />
				<column text="Amount saved" width="120" />
				<column text="Percentage" width="100" />
				<column text="Last payment" width="100" />
				<column text="Last payment Date" width="150" />
				<column text="Days remaining" width="100" />
				<column text="Target Status" width="100" />
			</header>
		</table>
	</panel>
	<panel gap="5" weightx="1">
		<button action="createAlert" icon="/icons/task_next_execution.png" text="Create Alert" />
		<button action="export" icon="/icons/export.png" text="Export" />
		<panel weightx="1"/>
		<button action="previous" icon="/icons/left.png" text="Previous" />
	</panel>
</panel>