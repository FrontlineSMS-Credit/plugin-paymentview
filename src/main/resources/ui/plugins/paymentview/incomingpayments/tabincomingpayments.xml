            <panel bottom="5" columns="2" gap="5" left="5" name="pnl_clients" right="5" top="5" weightx="1" weighty="1">
                <table name="tbl_clients" weightx="1" weighty="1" >
                    <header>
                        <column text="Name" width="52"/>
                        <column text="Phone"/>
                        <column text="Account"/>
                        <column text="Amount"/>
                        <column text="Date"/>
                        <column text="Time"/>
                    </header>
                </table>
            </panel>
            <panel columns="3" gap="5" left="5" right="5" bottom="5" name="pnl_buttons" weightx="1">
                <combobox name="cmb_mobilePaymentAccount" text="Select Mobile payment account"/>
                <button icon="/icons/tick.png" name="btn_analyse" text="Analyse"/>
                <button icon="/icons/cross.png" name="btn_export" text="Export"/>
            </panel>
        </panel>
    </tab>