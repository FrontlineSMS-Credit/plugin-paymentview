<?xml version="1.0" encoding="ISO-8859-1"?>
<dialog bottom="9" close="removeDialog(this)" 
	columns="1" gap="10" left="9" icon="/icons/user.png" name="distributeConfirmationDialog"	right="9" text="Distribute Group Payment"
	top="9" resizable="true" modal="true" closable="true"  width="500" height="250">


	<panel  width="200" height="150" name="pnlChildrenFields" columns="1" weightx="1" gap="10" >
		<label text="You have selected the following individual payments:" font="bold"/>
		<table  name="tbl_children" weightx="1" weighty="1" colspan="2">
			<header>
				<column text="Phone" width="200" icon="/icons/user.png" />
				<column text="Name" width="150" icon="/icons/phone.png" />
				<column text="Amount" width="100" icon="/icons/money.png"/>
			</header>
		</table>
	</panel>
	
	<panel>
		<label text="Note: After creating individual payments, this action cannot be undone."/>
	</panel>

	<panel colspan="3" weightx="1">
		<button icon="/icons/left.png" action="previous" name="btnPrevious"	text="Previous" />
		<panel weightx="1" />
		<button action="createInvidualIncomingPayments" icon="/icons/helper_add.png" text="Create New" />
	</panel>
</dialog>